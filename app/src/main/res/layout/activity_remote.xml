<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:id="@+id/remote_connect_status"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="16dp" />

                <Button
                    android:id="@+id/remote_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/remote_check_install_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="install permission"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/remote_send_self"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="send self"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/remote_send_apk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="send apk"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/core_send_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEND File"
                    tools:ignore="HardcodedText" />
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>